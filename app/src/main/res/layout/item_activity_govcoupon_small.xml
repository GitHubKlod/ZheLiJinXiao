<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/common_ffffff_8">


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/couponImg"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_95"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/img_load_error"
        app:round="@dimen/dp_5"
        android:scaleType="fitXY"
        />


    <TextView
        android:id="@+id/couponName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券家电券"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/couponImg"
        app:layout_constraintTop_toTopOf="@id/couponImg"
        android:layout_marginEnd="@dimen/dp_2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="开发区第一季度家电券发放开发区第一季度家电券发放开发区第一季度家电券发放开发区第一季度家电券发放开发区第一季度家电券发放开发区第一季度家电券发放"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintTop_toBottomOf="@id/couponName"
        app:layout_constraintStart_toStartOf="@id/couponName"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/couponDesc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/couponBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="去看看"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toStartOf="@id/couponName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_8"
        app:shape="rectangle"
        app:shape_solidColor="@color/FFFF4424"
        app:shape_radius="@dimen/dp_22"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>