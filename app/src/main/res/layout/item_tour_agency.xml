<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="@dimen/dp_114"
        android:layout_height="@dimen/dp_100"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="8dp"
        android:id="@+id/tourAgencyImage"
        android:scaleType="fitXY"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="永康市长运旅行社永康市长运旅行社永康市长运旅行社永康市长运旅行社永康市长运旅行社"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_15"
        android:id="@+id/tourAgencyName"
        app:layout_constraintTop_toTopOf="@id/tourAgencyImage"
        app:layout_constraintStart_toEndOf="@id/tourAgencyImage"
        android:layout_marginStart="@dimen/dp_11"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_8"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tourAgencyDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="永康市长运旅行社是隶属浙江双飞运输有限公司的国有独资备有永康市长运旅行社是隶属浙江双飞运输有限公司的国有独资备有永康市长运旅行社是隶属浙江双飞运输有限公司的国有独资备有..."
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/tourAgencyImage"
        app:layout_constraintStart_toStartOf="@id/tourAgencyName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_8"
        android:maxLines="3"
        android:ellipsize="end"
        />
</androidx.constraintlayout.widget.ConstraintLayout>