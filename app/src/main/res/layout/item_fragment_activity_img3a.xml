<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="“浙里金消”农产品促消费活动农产品促消费活动，每
人可享受最高200元优惠福利！" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/contentImg1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_5"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@id/contentImg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:round="@dimen/dp_5"
        tools:src="@mipmap/img_load_error" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/contentImg2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@id/contentImg3"
        app:layout_constraintStart_toEndOf="@id/contentImg1"
        app:layout_constraintTop_toTopOf="@id/contentImg1"
        app:round="@dimen/dp_5"
        android:layout_marginHorizontal="@dimen/dp_5"
        tools:src="@mipmap/img_load_error" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/contentImg3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contentImg2"
        app:layout_constraintTop_toTopOf="@id/contentImg1"
        app:round="@dimen/dp_5"
        tools:src="@mipmap/img_load_error" />

    <TextView
        android:id="@+id/upTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/contentImg1"
        tools:text="2022-07-18 14:08" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@color/FFE7E7E7"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>