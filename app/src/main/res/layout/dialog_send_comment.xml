<?xml version="1.0" encoding="utf-8"?>

<com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        app:shape_solidColor="@color/white"
        app:shape_topLeftRadius="@dimen/dp_4"
        app:shape_topRightRadius="@dimen/dp_4">


        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/commentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:gravity="start"
            android:hint="发表看法"
            android:minHeight="@dimen/dp_75"
            android:padding="10dp"
            android:textColor="@color/FF333333"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_radius="@dimen/dp_5"
            app:shape_solidColor="@color/FFF3F3F3"
            android:textSize="@dimen/sp_14"

            />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/sendCommentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_2"
            android:text="发送"
            android:textColor="#ffe95929"
            android:textSize="@dimen/sp_13"
            app:layout_constraintEnd_toEndOf="@id/commentContent"
            app:layout_constraintTop_toBottomOf="@id/commentContent"
            app:shape_radius="@dimen/dp_5"
            app:shape_strokeColor="@color/FFE95929"
            app:shape_strokeWidth="@dimen/dp_1" />
    </com.hjq.shape.layout.ShapeConstraintLayout>
