<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_ffffff_8"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:round="8dp"
        android:id="@+id/tourAgencyImage"
        android:adjustViewBounds="true"
        tools:src="@mipmap/img_load_error"
        />



    <TextView
        android:id="@+id/tourAgencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="金华圣地哥亚旅行社"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
       app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"

        />


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下单支付"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tourAgencyImage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:drawableTint="@color/white"
        android:drawablePadding="@dimen/dp_5"
        app:drawableEndCompat="@mipmap/icon_more_42"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:shape_solidColor="@color/FFE95929"
        app:shape_radius="@dimen/dp_15"
        android:gravity="center_vertical"


        />


</androidx.constraintlayout.widget.ConstraintLayout>