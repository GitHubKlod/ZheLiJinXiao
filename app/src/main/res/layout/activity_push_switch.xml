<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
        android:id="@+id/titleBar"
        layout="@layout/common_tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:paddingBottom="12dp"
        >


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性化推荐"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            />

        <com.klod.base.view.SwitchButton
            android:id="@+id/goodsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:color="@color/FFE95929"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintBottom_toBottomOf="@id/tv1"

            android:layout_marginEnd="12dp"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/goodsSwitch"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/FFF3F3F3"

            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文章内容推荐"
            app:layout_constraintTop_toBottomOf="@id/view1"

            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"

            />

        <com.klod.base.view.SwitchButton
            android:id="@+id/articleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:color="@color/FFE95929"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintBottom_toBottomOf="@id/tv2"

            android:layout_marginEnd="12dp"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/articleSwitch"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/FFF3F3F3"

            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知栏消息推送"
            app:layout_constraintTop_toBottomOf="@id/view2"

            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"

            />

        <com.klod.base.view.SwitchButton
            android:id="@+id/jPushSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:color="@color/FFE95929"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tv3"

            android:layout_marginEnd="12dp"
            />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/jPushSwitch"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/FFF3F3F3"

            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢设置"
            app:layout_constraintTop_toBottomOf="@id/view3"

            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"

            />

        <com.klod.base.view.SwitchButton
            android:id="@+id/cnxhSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:color="@color/FFE95929"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintBottom_toBottomOf="@id/tv4"

            android:layout_marginEnd="12dp"
            />
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/cnxhSwitch"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:background="@color/FFF3F3F3"

            />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定向推送功能"
            app:layout_constraintTop_toBottomOf="@id/view4"

            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"

            />

        <com.klod.base.view.SwitchButton
            android:id="@+id/dxtsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:color="@color/FFE95929"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv5"
            app:layout_constraintBottom_toBottomOf="@id/tv5"

            android:layout_marginEnd="12dp"
            />
<!--        <View-->
<!--            android:id="@+id/view3"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/articleSwitch"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:layout_marginHorizontal="12dp"-->
<!--            android:background="@color/FFF3F3F3"-->

<!--            />-->

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>