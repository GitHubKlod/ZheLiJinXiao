<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FFEDEDED"
        android:orientation="vertical">


        <include
            android:id="@+id/titleBar"
            layout="@layout/common_tool_bar"

            />


        <com.zhili.zljx.widget.view.KeyValueLayout
            android:id="@+id/userNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_8"
            app:klod_key="用户编号"
            app:klod_key_color="@color/FF666666"
            app:klod_key_size="@dimen/sp_14"
            app:klod_value_color="@color/FF333333"
            app:klod_value_size="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            tools:klod_value="用户编号" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:text="我的头像"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/userHead"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginVertical="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_header_default" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:text="昵称"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/changeNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_3"
                android:text="更换昵称"

                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/FFE95929"

                />

            <TextView
                android:id="@+id/nickName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_9"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@id/changeNickName"
                app:layout_constraintEnd_toStartOf="@id/changeNickName"
                app:layout_constraintTop_toTopOf="@id/changeNickName"
                tools:text="憨憨" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:text="手机验证"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/changePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_3"
                android:text="更换手机号"

                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/FFE95929"

                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_9"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@id/changePhone"
                app:layout_constraintEnd_toStartOf="@id/changePhone"
                app:layout_constraintTop_toTopOf="@id/changePhone"
                tools:text="15257925260" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.zhili.zljx.widget.view.KeyValueLayout
            android:id="@+id/realName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_8"
            app:klod_key="实名认证"
            app:klod_key_color="@color/FF666666"
            app:klod_key_size="@dimen/sp_14"
            app:klod_value_color="@color/FF333333"
            app:klod_value_size="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            tools:klod_value="KLOD" />

        <com.zhili.zljx.widget.view.KeyValueLayout
            android:id="@+id/pushSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_8"
            app:klod_key="推送设置"
            app:klod_key_color="@color/FF666666"
            app:klod_key_size="@dimen/sp_14"
            app:klod_value=">"
            app:klod_value_color="@color/FF333333"
            app:klod_value_size="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/titleBar" />

        <com.zhili.zljx.widget.view.KeyValueLayout
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_8"
            app:klod_key="关于我们"
            app:klod_key_color="@color/FF666666"
            app:klod_key_size="@dimen/sp_14"
            app:klod_value=">"
            app:klod_value_color="@color/FF333333"
            app:klod_value_size="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/titleBar" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_13"
            android:text="退出登录"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:shape_radius="@dimen/dp_30"
            app:shape_solidColor="@color/FFE95929"

            />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/clearCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_13"
            android:text="清除缓存"
            android:textColor="@color/FFE95929"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:shape_radius="@dimen/dp_30"
            app:shape_strokeColor="@color/FFE95929"
            app:shape_strokeWidth="@dimen/dp_1" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
